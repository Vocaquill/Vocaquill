<Page x:Class="Vocaquill.AllWindow.PageWindow.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vocaquill.AllWindow.PageWindow"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontFamily" Value="Lucida Sans Unicode"></Setter>
            <Setter Property="Width" Value="180"></Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Background="LightSteelBlue"  Grid.Row="0">
            <Button Content="Вийти з аккаунта" Name="LogoutBT" Click="LogoutBT_Click"/>
            <Button Content="Старт запису" Name="StartStopRecordBT" Click="StartStopRecordBT_Click"/>
            <TextBlock FontSize="18" Margin="5" Name="TimerRecordTB">00:00</TextBlock>
        </StackPanel>

        <DockPanel Grid.Row="1" Margin="10">
            <StackPanel DockPanel.Dock="Left" Width="200" Background="LightSteelBlue">
                <Button Content="Генерація PDF"/>
            </StackPanel>
            <TextBox Name="LectureTextBox" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="10"/>
        </DockPanel>
    </Grid>
</Page>
